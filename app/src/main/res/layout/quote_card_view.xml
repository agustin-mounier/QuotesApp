<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content">

    <TextView android:id="@+id/quote_card_text"
              android:gravity="center"
              android:layout_width="match_parent"
              android:layout_height="wrap_content" app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
              tools:text="Some dumb shit about friends and life" android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
              android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:layout_marginTop="12dp"/>

    <TextView android:id="@+id/quote_card_author"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="12dp"
              app:layout_constraintTop_toBottomOf="@+id/quote_card_text"
              tools:text="Shit Dickenson" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="24dp"
              android:layout_marginRight="24dp" android:layout_marginBottom="12dp"/>
</android.support.constraint.ConstraintLayout>