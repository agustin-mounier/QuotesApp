<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <TextView
            android:id="@+id/quotes_detail_text"
            android:textAlignment="center"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="24dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:textSize="14sp"
            tools:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Vestibulum leo diam, malesuada quis hendrerit dignissim, bibendum vel urna. Integer maximus consectetur nisi, in finibus dui laoreet vel. Morbi ut auctor."/>

    <TextView
            android:id="@+id/quotes_detail_author"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            tools:text="Lorem Ipsum"
            android:layout_marginEnd="32dp" android:layout_marginRight="32dp"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toBottomOf="@+id/quotes_detail_text"
            android:layout_marginTop="16dp"/>

    <TextView
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="Tags" app:layout_constraintTop_toBottomOf="@+id/quotes_detail_author"
            android:layout_marginTop="24dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp" android:id="@+id/textView2"/>

    <LinearLayout
            android:id="@+id/quotes_detail_tags"
            android:orientation="horizontal"
            tools:layout_width="match_parent"
            tools:layout_height="20dp"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/textView2" android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" android:layout_marginEnd="16dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="16dp"/>

    <Button
            android:text="Add to favorites"
            android:textSize="14sp"
            android:layout_width="match_parent" android:layout_height="wrap_content" android:id="@+id/add_to_favorites_button"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/edit_quote_button"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"/>

    <Button
            android:text="Edit Quote"
            android:textSize="14sp"
            android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="32dp"
            app:layout_constraintBottom_toBottomOf="parent" android:id="@+id/edit_quote_button"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"/>

</android.support.constraint.ConstraintLayout>